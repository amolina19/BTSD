<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/imagen_error_chat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/errorCargarAudio"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:gravity="end"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/duracionAudio"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/buttonAudioPlay"
        android:text="@string/text"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:id="@+id/buttonAudioPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_audio_play"
        android:visibility="visible"
        android:clickable="false"
        android:layout_marginTop="5dp"
        />

    <ImageButton
        android:id="@+id/buttonAudioStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_audio_pause"
        android:visibility="invisible"
        android:clickable="false"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/hora"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/buttonAudioPlay"
        android:text="@string/text"
        android:textColor="@color/colorNegro"
        android:textSize="8sp" />
    />
</RelativeLayout>
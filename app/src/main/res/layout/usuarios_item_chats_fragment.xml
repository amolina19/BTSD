<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout_chat_fragment_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imagen_perfil"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/usuario"
        android:layout_width="300dp"
        android:maxWidth="300dp"
        android:layout_marginTop="5dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imagen_perfil"
        android:text="@string/usuario"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textoChat"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="20dp"
        android:maxWidth="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/imagen_perfil"
        android:text="@string/chat_fragment_text_test_resource"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/horaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_alignParentEnd="true"
        android:text="@string/hora_chat_fragment_test_resource"
        android:textSize="12sp"
        android:paddingRight="0dp"
        />

    <TextView
        android:id="@+id/textoLeidoChat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_leido"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_below="@id/horaTexto"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
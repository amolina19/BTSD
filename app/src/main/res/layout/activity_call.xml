<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.CallActivity">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <View
            android:id="@+id/viewRemote"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewCall"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginBottom="150dp"
            />

        <TextView
            android:id="@+id/usuarioLlamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="230dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="USERTEST"
            />


        <at.markushi.ui.CircleButton
            android:id="@+id/endCallButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_call_end"
            app:cb_color="@color/red"
            app:cb_pressedRingWidth="8dip"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="35dp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/acceptCallButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_call_end"
            app:cb_color="@color/spring_green"
            app:cb_pressedRingWidth="8dip"
            android:layout_gravity="center|bottom|start"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="35dp"
            android:rotation="220"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/denyCallButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_call_end"
            app:cb_color="@color/red"
            app:cb_pressedRingWidth="8dip"
            android:layout_gravity="center|bottom|end"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="35dp"/>

        <Chronometer
            android:textAlignment="center"
            android:textSize="30sp"
            android:id="@+id/timerCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="140dp"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.EstadoActivity"
    android:background="@drawable/activity_drawable_negro_acrylic"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/stories_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <jp.shts.android.storiesprogressview.StoriesProgressView
        android:id="@+id/stories"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/stories_imagen_perfil_usuario"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_launcher_foreground"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/stories_nombre_usuario"
                android:layout_marginTop="0dp"
                android:layout_marginStart="5dp"
                android:layout_width="200dp"
                android:layout_height="18dp"
                android:text="@string/usuario"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/stories_fecha_subida_usuario"
                android:layout_marginStart="5dp"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/hora"
                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/addHistoria"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/colorBlanco"
        android:text="@string/addHistoria"
        android:background="@drawable/border_rectangle_black"
        android:layout_gravity="center"
    />

    <Button
        android:id="@+id/eliminarHistoria"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:background="@drawable/ic_papelera_24"
        />

    <Button
        android:id="@+id/addv2Historia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="end|bottom"
        android:background="@drawable/add_icon"
        />


</FrameLayout>